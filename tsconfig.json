{
  "include": [
    "*.d.ts",
    "src/**/*",
  ],
  

  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "removeComments": true,
    "rootDir": "src/",
    "outDir": "out/",
    "baseUrl": "src/",
    "paths": {
      "defs/*": [ "../*.d.ts" ],
      "/*.js": [ "*" ],
      "*.js": [ "*" ],
    }
  }
}